<atlassian-plugin key="${pom.groupId}.${pom.artifactId}" name="${pom.name}">
    <plugin-info>
        <description>${pom.description}</description>
        <version>${pom.version}</version>
        <application-version min="4.3" max="4.3"/>
        <vendor name="${pom.organization.name}" url="${pom.organization.url}" />
    </plugin-info>
	
	<servlet name="Shibboleth logout servlet" key="shibboleth.logout" class="com.valiantys.atlassian.features.shibboleth.LogoutServlet">
        <description>Shibboleth logout servlet. The aim of this servlet is to clear the jira session and return the response to the shibboleth server</description>
        <url-pattern>/ShibbolethLogout</url-pattern>
    </servlet>
      
</atlassian-plugin>
